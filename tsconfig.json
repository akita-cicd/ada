{
  "compilerOptions": {
    "target": "ES2015",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "tsBuildInfoFile": "./",
    "outDir": "build",
    "incremental": true,
    "composite": true
  },
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Recommended"
}
